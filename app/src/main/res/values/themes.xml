<resources>
    <!-- Base application theme. -->
    <style name="Theme.VacinaApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Azul_base</item>
        <item name="colorPrimaryVariant">@color/Azul_base</item>
        <item name="colorOnPrimary">@color/background_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="background">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TemaSplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Azul_base</item>
        <item name="colorPrimaryVariant">@color/Azul_base</item>
        <item name="colorOnPrimary">@color/background_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--radiobutton style-->
    <style name="radioButtonStyle">
        <item name="colorAccent">@color/Azul_base</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
    </style>

    <style name="ColoredHandleTheme">
        <item name="colorControlActivated">@color/azul_cursor</item>
    </style>
</resources>