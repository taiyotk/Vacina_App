<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?background"
    tools:context=".fragments.ModificarUsuarioFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/titulo_alterar_dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/alterar_dados"
                android:textAlignment="center"
                android:textColor="?android:textColorPrimary"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nome_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/nome"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titulo_alterar_dados" />

            <EditText
                android:id="@+id/nome_edittext_editar"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/layout_borda_edittext"
                android:gravity="center_vertical"
                android:hint="@string/nome_completo_hint"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:autofillHints="name"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nome_titulo" />

            <TextView
                android:id="@+id/titulo_cpf_editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/cpf"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nome_edittext_editar" />

            <EditText
                android:id="@+id/cpf_edittext_editar"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/layout_borda_edittext"
                android:gravity="center_vertical"
                android:hint="@string/cpf_hint"
                android:maxLength="14"
                android:inputType="phone"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titulo_cpf_editar" />

            <TextView
                android:id="@+id/telefone_titulo_editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/telefone"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cpf_edittext_editar" />

            <EditText
                android:id="@+id/tel_edittext_editar"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/layout_borda_edittext"
                android:gravity="center_vertical"
                android:hint="@string/telefone_exemplo"
                android:inputType="phone"
                android:maxLength="14"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:autofillHints="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/telefone_titulo_editar" />

            <TextView
                android:id="@+id/email_titulo_editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/e_mail"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tel_edittext_editar" />

            <EditText
                android:id="@+id/email_edittext_editar"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:autofillHints="emailAddress"
                android:layout_marginEnd="30dp"
                android:background="@drawable/layout_borda_edittext"
                android:gravity="center_vertical"
                android:hint="@string/seu_email"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_titulo_editar" />

            <TextView
                android:id="@+id/textview_aviso_email"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="@string/e_mail_invalido"
                android:textColor="@color/vermelho"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_edittext_editar" />

            <TextView
                android:id="@+id/usuario_titulo_editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/nome_de_usuario"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_edittext_editar" />


            <EditText
                android:id="@+id/usuario_edittext_editar"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:autofillHints="emailAddress"
                android:layout_marginEnd="30dp"
                android:background="@drawable/layout_borda_edittext"
                android:gravity="center_vertical"
                android:hint="@string/nome_de_usuario_hint"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/usuario_titulo_editar" />

            <TextView
                android:id="@+id/confirmar_senha_titulo_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/confirme_com_sua_senha"
                android:textColor="?android:textColorPrimary"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usuario_edittext_editar"/>

            <EditText
                android:id="@+id/senha_edittext_editar"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/layout_borda_edittext"
                android:gravity="center_vertical"
                android:hint="@string/senha_hint"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirmar_senha_titulo_edit"
                android:importantForAutofill="no" />

            <Button
                android:id="@+id/confirmar_button"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="70dp"
                android:text="@string/confirmar"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/senha_edittext_editar" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>