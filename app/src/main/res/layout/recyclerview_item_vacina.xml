<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_vacina_recyclerview"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">
        <TextView
            android:id="@+id/doenca_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="@string/doenca"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/disp_textview"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/dispon"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/ver_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@drawable/border"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_eye" />

        <TextView
            android:id="@+id/edit_icon_clickable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="22dp"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:layout_weight="0.9"
            app:drawableRightCompat="@drawable/ic_baseline_edit_24" />

    </TableRow>
</LinearLayout>